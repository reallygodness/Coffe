<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Фон, можно задать свой цвет, например, белый -->
    <solid android:color="#FFFFFFFF" />
    <!-- Скругление углов -->
    <corners android:radius="8dp" />
    <!-- Обводка -->
    <stroke
        android:width="1dp"
        android:color="#FFCCCCCC" />
    <!-- Отступы внутри -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
