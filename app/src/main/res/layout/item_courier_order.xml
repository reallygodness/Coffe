<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_marginBottom="16dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/textOrderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Заказ 101"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#222222"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/textOrderClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Иванов Иван"
        android:textSize="18sp"
        android:textColor="#222222"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/textOrderAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ул. Лесная, д. 5, кв. 12"
        android:textSize="16sp"
        android:textColor="#444444"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/textOrderSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сумма заказа: 250 ₽"
        android:textSize="16sp"
        android:textColor="#444444"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnTakeOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Взять заказ"
        android:background="@drawable/button_rounded"
        android:textColor="@color/white" />

</LinearLayout>
